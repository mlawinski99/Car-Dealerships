@{
	ViewData["Title"] = "Panel Administratora";
	Layout = "~/Views/Admin/Employees/_Layout.cshtml";
	ViewData["ActivePage"] = "Employees/EmployeeList";
}


@foreach (Employee employee in @ViewBag.employeeList)
{
	<div class="accordion" id="accordionExample">
		<div id="accordion">
			<div class="card">
				<div class="card-header" id="col-@employee.EmployeeId-2">
					<h5 class="mb-0">
						@if (@employee.EmployeeJobPosition == "Admin")
						{
							<button class="btn btn-link" data-bs-toggle="collapse" data-bs-target="#col-@employee.EmployeeId" aria-expanded="true" aria-controls="col-@employee.EmployeeId">
								Admin
							</button>
						}
						else
						{
							<button class="btn btn-link" data-bs-toggle="collapse" data-bs-target="#col-@employee.EmployeeId" aria-expanded="true" aria-controls="col-@employee.EmployeeId">
								@employee.ApplicationUser.FirstName @employee.ApplicationUser.LastName
							</button>
						}
					</h5>
				</div>
				<div id="col-@employee.EmployeeId" class="collapse collapsed" aria-labelledby="col-@employee.EmployeeId" data-bs-parent="#accordion">
					<div class="card-body border-3 bgc-white shadow-sm  border-bottom-4">
						<div class="row">
							<div class="col-sm-3">
								<h6 class="mb-0">Imię Nazwisko</h6>
							</div>
							<div class="col-sm-9 text-secondary"> @employee.ApplicationUser.FirstName @employee.ApplicationUser.LastName</div>
						</div>
						<hr>
						<div class="row">
							<div class="col-sm-3">
								<h6 class="mb-0">Email</h6>
							</div>
							<div class="col-sm-9 text-secondary"> @employee.ApplicationUser.Email</div>
						</div>
						<hr>
						<div class="row">
							<div class="col-sm-3">
								<h6 class="mb-0">Tel. Kontaktowy</h6>
							</div>
							<div class="col-sm-9 text-secondary"> @employee.ApplicationUser.PhoneNumber</div>
						</div>
						<hr>
						<div class="row">
							<div class="col-sm-3">
								<h6 class="mb-0">ID Pracownika</h6>
							</div>
							<div class="col-sm-9 text-secondary"> @employee.EmployeeId</div>
						</div>
						<hr>
						<div class="row">
							<div class="col-sm-3">
								<h6 class="mb-0">Stanowisko</h6>
							</div>
							<div class="col-sm-9 text-secondary"> @employee.EmployeeJobPosition</div>
						</div>

						<hr>
						<div class="row">
							<div class="col-sm-3">
								<h6 class="mb-0">Typ umowy</h6>
							</div>
							<div class="col-sm-9 text-secondary"> @employee.EmployeeContractType</div>
						</div>

						<hr>
						<div class="row">
							<div class="col-sm-3">
								<h6 class="mb-0">Wynagrodzenie</h6>
							</div>
							<div class="col-sm-9 text-secondary"> @employee.EmployeeSalary</div>
						</div>

						<hr>
						<div class="row">
							<div class="col-sm-3">
								<h6 class="mb-0">Data rozpoczęcia współpracy</h6>
							</div>
							<div class="col-sm-9 text-secondary"> @employee.EmployeeStartDate</div>
						</div>

						<hr>
						<div class="row">
							<div class="col-sm-3">
								<h6 class="mb-0">Data zakończenia współpracy</h6>
							</div>
							<div class="col-sm-9 text-secondary"> @employee.EmployeeFinishDate</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
}
