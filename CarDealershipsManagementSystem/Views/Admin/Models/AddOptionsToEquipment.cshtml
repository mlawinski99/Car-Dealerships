@{
    ViewData["Title"] = "Panel Administratora";
    Layout = "~/Views/Admin/Models/_Layout.cshtml";
    ViewData["ActivePage"] = "Models/AddOptionsToEquipment";
}
@model CarDealershipsManagementSystem.ViewModels.AddOptionsToEquipmentViewModel
<form asp-controller="Admin" asp-action="AddOptionsToEquipment">
    <div class="form-group">
        <label asp-for="EquipmentId" class="control-label"></label>
        <select asp-for="EquipmentId" class="form-control">
            @foreach (Equipment equipment in ViewBag.equipmentList)
            {
                <option value="@equipment.EquipmentId.ToString()">@equipment.EquipmentName</option>
            }
        </select>
        <span asp-validation-for="EquipmentId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OptionIdList" class="control-label"></label>
        <select asp-for="OptionIdList" class="form-control multi-select" multiple="multiple" >
            @foreach (Option option in ViewBag.optionList)
            {
                <option value="@option.OptionId.ToString()">@option.OptionName</option>
            }
        </select>
        <span asp-validation-for="OptionIdList" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <input type="submit" value="Dodaj Opcje Do Wersji Wyposazeniowej" class="btn btn-primary" />
    </div>
</form>