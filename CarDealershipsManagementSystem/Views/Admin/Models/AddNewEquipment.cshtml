@{
    ViewData["Title"] = "Panel Administratora";
    Layout = "~/Views/Admin/Models/_Layout.cshtml";
    ViewData["ActivePage"] = "Models/AddNewEquipment";
}
@model CarDealershipsManagementSystem.ViewModels.CreateEquipmentViewModel
<form asp-controller="Admin" asp-action="AddNewEquipment">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="EquipmentName" class="control-label"></label>
        <input asp-for="EquipmentName" class="form-control" />
        <span asp-validation-for="EquipmentName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EquipmentPrice" class="control-label"></label>
        <input asp-for="EquipmentPrice" class="form-control" />
        <span asp-validation-for="EquipmentPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OptionIdList" class="control-label"></label>
        <select asp-for="OptionIdList" class="form-control multi-select" multiple="multiple" >
            @foreach (Option option in ViewBag.optionList)
            {
                <option value="@option.OptionId.ToString()">@option.OptionName</option>
            }
        </select>
        <span asp-validation-for="OptionIdList" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <input type="submit" value="Dodaj Wersje Wyposazeniowa" class="btn btn-primary" />
    </div>
</form>