@{
    ViewData["Title"] = "Panel Administratora";
    Layout = "~/Views/Admin/Models/_Layout.cshtml";
    ViewData["ActivePage"] = "Models/AddEnginesToModel";
}
@model CarDealershipsManagementSystem.ViewModels.AddEnginesToModelViewModel
<form asp-controller="Admin" asp-action="AddEnginesToModel">
    <div class="form-group">
        <label asp-for="ModelId" class="control-label"></label>
        <select asp-for="ModelId" class="form-control">
            @foreach (Model m in ViewBag.modelList)
            {
                <option value="@m.ModelId.ToString()">@m.ModelName</option>
            }
        </select>
        <span asp-validation-for="ModelId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EngineIdList" class="control-label"></label>
        <select asp-for="EngineIdList" class="form-control multi-select" multiple="multiple" >
            @foreach (Engine engine in ViewBag.engineList)
            {
                <option value="@engine.EngineId.ToString()">@engine.EngineName</option>
            }
        </select>
        <span asp-validation-for="EngineIdList" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <input type="submit" value="Dodaj Silniki do Modelu" class="btn btn-primary" />
    </div>
</form>