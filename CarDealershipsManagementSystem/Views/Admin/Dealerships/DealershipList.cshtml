@{
    ViewData["Title"] = "Panel Administratora";
    Layout = "~/Views/Admin/Dealerships/_Layout.cshtml";
    ViewData["ActivePage"] = "Dealerships/DealershipList";
}
<ul class="list-group list-group-flush">
    @foreach (Dealership dealership in @ViewBag.dealershipList)
    {
        <div class="accordion" id="accordionExample">
		<div id="accordion">
			<div class="card">
				<div class="card-header" id="col-@dealership.DealershipId-2">
					<h5 class="mb-0">
					
							<button class="btn btn-link" data-bs-toggle="collapse" data-bs-target="#col-@dealership.DealershipId" aria-expanded="true" aria-controls="col-@dealership.DealershipId">
								@dealership.DealershipName
							</button>
						
					</h5>
				</div>
				<div id="col-@dealership.DealershipId" class="collapse collapsed" aria-labelledby="col-@dealership.DealershipId" data-bs-parent="#accordion">
					<div class="card-body border-3 bgc-white shadow-sm  border-bottom-4">
						<div class="row">
							<div class="col-sm-3">
								<h6 class="mb-0">Nazwa Salonu</h6>
							</div>
							<div class="col-sm-9 text-secondary"> @dealership.DealershipName</div>
						</div>
						<hr>
						<div class="row">
							<div class="col-sm-3">
								<h6 class="mb-0">Miasto</h6>
							</div>
							<div class="col-sm-9 text-secondary"> @dealership.Address.AddressCity</div>
						</div>	
						
							<hr>
						<div class="row">
							<div class="col-sm-3">
								<h6 class="mb-0">Kod Pocztowy</h6>
							</div>
							<div class="col-sm-9 text-secondary"> @dealership.Address.AddressPostalCode</div>
						</div>	
						

						<hr>
						<div class="row">
							<div class="col-sm-3">
								<h6 class="mb-0">Ulica</h6>
							</div>
							<div class="col-sm-9 text-secondary"> @dealership.Address.AddressStreet</div>
						</div>

							<hr>
						<div class="row">
							<div class="col-sm-3">
								<h6 class="mb-0">Numer Budynku</h6>
							</div>
							<div class="col-sm-9 text-secondary"> @dealership.Address.AddressApartmentNumber</div>
						</div>
						
						<hr>
						<div class="row">
							<div class="col-sm-3">
								<h6 class="mb-0">Ilosc Samochodow</h6>
							</div>
							<div class="col-sm-9 text-secondary"> @dealership.DealershipMaxCarsNumber</div>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>


        



    }
</ul>
