@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Usuń dane osobowe";
    ViewData["ActivePage"] = ManageNavPages2.PersonalData;
}

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Usunięcie danych osobowych usunie twoje konto.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.Password" class="form-label">Hasło</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="w-100 btn btn-lg btn-danger" type="submit">Usuń moje dane i konto</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
