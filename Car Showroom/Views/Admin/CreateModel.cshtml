@{
    ViewData["Title"] = "Add New Model";
}
@model Car_Showroom.ViewModels.CreateModelViewModel

<div class="row justify-content-center mt-3">
    <div class="col-md-5">
        <div class="jumbotron shadow-lg p-3 mb-5 bg-white rounded">
            <h1 class="text-center">Dodaj Nowy Model</h1><br />
            <form method="post" class="form-group" asp-controller="Management" asp-action="CreateModel">
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <div class="input-group-prepend">
                                <input asp-for="Name" class="form-control" placeholder="Nazwa Modelu" />
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <select asp-for="EngineId" class="form-control" placeholder="Enigne">
                                    @foreach (var engine in ViewData["engineList"] as IList<Engine>)
                                    {
                                        <option value="@engine.Id">@engine.Name</option>
                                    }
                                </select>
                        </div>
                        <div class="form-group">
                            <div class="input-group-prepend" >
                                <select asp-for="TrimId" class="form-control" placeholder="Trim">
                                    @foreach (var trim in ViewData["trimList"] as IList<Trim>)
                                    {
                                        <option value="@trim.Id">@trim.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group-prepend" >
                                <select asp-for="Type" class="form-control" placeholder="Model Type">
                                    @foreach (var carType in (CarType[])Enum.GetValues(typeof(CarType)))
                                    {
                                        <option value="@carType">@carType</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group-prepend" >
                                <input class="form-control form-control-file" asp-for="Image" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row align-content-center justify-content-center">
                    <button type="submit" class="btn btn-primary">Dodaj Model</button>
                </div>
            </form>
        </div>
    </div>
</div>
