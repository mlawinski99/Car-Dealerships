@{
    ViewData["Title"] = "Sign up";
}
@model Car_Showroom.ViewModels.RegisterViewModel

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">
<div class="row justify-content-center mt-3">
    <div class="col-md-5">
        <div class="jumbotron shadow-lg p-3 mb-5 bg-white rounded">
            <h1 class="text-center">Rejestracja</h1><br />
            <form method="post" class="form-group">
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text mr-2"> <i class="fa fa-envelope "></i> </span><input asp-for="Email" class="form-control" placeholder="Email" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text mr-2"> <i class="fa fa-user"></i> </span><input asp-for="Login" class="form-control" placeholder="Login" />
                            </div>
                            <span asp-validation-for="Login" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text mr-2"> <i class="fa fa-lock"></i> </span><input asp-for="Password" class="form-control" placeholder="Hasło" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text mr-2"> <i class="fa fa-id-card"></i> </span><input asp-for="FirstName" class="form-control" placeholder="Imię" />
                            </div>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text mr-2"> <i class="far fa-id-card"></i> </span><input asp-for="LastName" class="form-control" placeholder="Nazwisko" />
                            </div>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row align-content-center justify-content-center">
                    <button type="submit" class="btn btn-primary">Zarejestruj</button>
                </div>
            </form>
        </div>
    </div>
</div>